<Page x:Class="LanguageSchool.Pages.ServiceAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServiceAdd">

    <Grid>
        <StackPanel>
            <TextBox x:Name="servName"/>
            <TextBox x:Name="servImg"/>
            <TextBox x:Name="servDuration"/>
            <TextBox x:Name="servCost"/>
            <TextBox x:Name="servDiscount"/>
            <Button x:Name="AddButton" Content="Добавить услугу" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
