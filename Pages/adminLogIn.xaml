<Page x:Class="LanguageSchool.Pages.adminLogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="adminLogIn">

    <Grid>
        <StackPanel>
            <TextBlock Text="Введите код администратора"/>
            <TextBox x:Name="adminCode"/>
            <Button x:Name="adminLogInBtn" Content="Войти" Click="adminLogInBtn_Click"/>
            <Button x:Name="btnBack" Content="Назад" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
